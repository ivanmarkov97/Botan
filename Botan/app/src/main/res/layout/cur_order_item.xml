<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#303030">

    <TextView
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ava_id"
        android:layout_toEndOf="@+id/ava_id"
        android:id="@+id/textViewSubject"
        android:textColor="#DDDDDD"
        android:layout_above="@+id/textViewDescription" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textViewCost"
        android:textColor="#DDDDDD"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate"
        android:layout_alignBottom="@+id/ava_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#DDDDDD"/>

    <TextView
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        android:id="@+id/textViewDescription"
        android:layout_width="170dp"
        android:layout_toRightOf="@+id/ava_id"
        android:layout_toEndOf="@+id/ava_id"
        android:layout_below="@+id/textViewCost"
        android:layout_alignBottom="@+id/ava_id"
        android:textColor="#DDDDDD"/>

    <ImageView
        android:layout_width="60dp"
        app:srcCompat="@drawable/ava_order"
        android:id="@+id/ava_id"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#DDDDDD"/>
</RelativeLayout>